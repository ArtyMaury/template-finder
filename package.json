{
    "name": "template-finder",
    "displayName": "Template Finder",
    "description": "Find your templatized variables values easily",
    "repository": {
        "type": "git",
        "url": "https://github.com/ArtyMaury/template-finder"
    },
    "version": "1.0.3",
    "publisher": "Artymaury",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "template",
        "jinja",
        "ansible"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "properties": {
                "templateFinder.variables.sourceFolders": {
                    "type": "array",
                    "default": [],
                    "description": "List of folders containing de variables values in the workspace",
                    "examples": [
                        "referentiel-configuration/"
                    ]
                },
                "templateFinder.variables.ignoredFolders": {
                    "type": "array",
                    "default": [],
                    "description": "Indicate folders to be ignored during the search for variables values",
                    "examples": [
                        "referentiel-configuration/ignoredFiles/"
                    ]
                },
                "templateFinder.extension.activated": {
                    "type": "boolean",
                    "default": false,
                    "description": "Indicate wether the extension should scan for templates in this workspace"
                }
            }
        },
        "commands": [
            {
                "command": "extension.activate",
                "title": "Template-finder: Activate in this workspace"
            },
            {
                "command": "extension.deactivate",
                "title": "Template-finder: Deactivate in this workspace"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/js-yaml": "^3.11.2",
        "fs": "0.0.1-security",
        "js-yaml": "^3.12.0"
    },
    "icon": "icon.png"
}